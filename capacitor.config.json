{
  "appId": "com.biomap.app",
  "appName": "biomap",
  "webDir": "dist",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#10B981",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false,
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "Permissions": {
      "microphone": {
        "name": "microphone",
        "description": "This app needs microphone access to record audio"
      },
      "location": {
        "name": "location",
        "description": "This app needs location access to record audio with GPS coordinates"
      }
    }
  }
}
